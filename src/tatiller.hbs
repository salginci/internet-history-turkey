<script>
    // Wait for the DOM to be fully loaded before running the script
    document.addEventListener('DOMContentLoaded', function() {
        // Get holidays data from the script tag
        let holidaysDataScript = document.getElementById('holidays-data');
        let holidaysData = [];
        if (holidaysDataScript) {
            console.log('Raw holidays data script content:', holidaysDataScript.textContent);
            try {
                const rawHolidays = JSON.parse(holidaysDataScript.textContent);
                // Filter out duplicates based on title, month, and day, keeping the first occurrence
                const uniqueHolidaysMap = new Map();
                rawHolidays.forEach(holiday => {
                    // Create a compound key based on title, month index, day, and year
                    const uniqueKey = `${holiday.title}-${holiday.monthIndex}-${holiday.day}-${holiday.year}`;
                    if (!uniqueHolidaysMap.has(uniqueKey)) {
                        uniqueHolidaysMap.set(uniqueKey, holiday);
                    }
                });
                holidaysData = Array.from(uniqueHolidaysMap.values());

                // Debug: Print the number of items in the parsed and filtered holidaysData array
                console.log('Number of holidays after JSON parsing and filtering:', holidaysData.length);

            } catch (e) {
                console.error("Error parsing holidays data:", e);
            }
        }

        const holidayListContainer = document.querySelector('.holidays-container');
        const holidayDetailContainer = document.getElementById('holiday-detail-container');
        const pageTitle = document.querySelector('.page-title');
        const holidayFilters = document.querySelector('.holiday-filters');
        const holidaysList = document.querySelector('.holidays-list');

        // Function to update countdown timer (adapted from previous template)
        function updateCountdownTimer(holidayDate) {
            const countdownTimerElement = document.querySelector('#holiday-detail-container .countdown-timer');
            if (!countdownTimerElement) return; // Exit if timer element is not found

            const now = new Date();
            const timeLeft = holidayDate - now;

            if (timeLeft <= 0) {
                countdownTimerElement.innerHTML = `
                    <div class="holiday-passed">
                        <i class="ri-calendar-check-line"></i>
                        <p>Bu tatil günü geçti!</p>
                    </div>
                `;
                // Clear any existing interval
                const intervalId = countdownTimerElement.dataset.intervalId;
                if (intervalId) clearInterval(intervalId);

                return;
            }

            const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft % (1000 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

            // Update the display elements within the detail container
            const daysEl = countdownTimerElement.querySelector('#days');
            const hoursEl = countdownTimerElement.querySelector('#hours');
            const minutesEl = countdownTimerElement.querySelector('#minutes');
            const secondsEl = countdownTimerElement.querySelector('#seconds');

            if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
            if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
            if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
            if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');
        }

        // Function to render holiday detail
        function renderHolidayDetail(holiday) {
            // Hide holiday list, filters, and page title
            if (holidaysList) holidaysList.style.display = 'none';
            if (holidayFilters) holidayFilters.style.display = 'none';
            if (pageTitle) pageTitle.style.display = 'none';

            // Template for the holiday detail view (reusing structure)
            const detailTemplate = `
                <button id="back-to-list"><i class="ri-arrow-left-line"></i> Geri Dön</button>
                <div class="clock-container">
                    <div class="holiday-countdown">
                        <h1 class="page-title">${holiday.title}</h1>

                        <div class="countdown-info">
                            <div class="holiday-date">
                                <div class="month">${holiday.month}</div>
                                <div class="day">${holiday.day}</div>
                                <div class="year">${holiday.year}</div>
                            </div>
                            <div class="holiday-details">
                                <p class="holiday-duration">${holiday.duration}</p>
                                <p class="holiday-description">${holiday.description}</p>
                            </div>
                        </div>

                        <div class="countdown-timer">
                            <div class="countdown-item">
                                <div class="countdown-value" id="days">00</div>
                                <div class="countdown-label">Gün</div>
                            </div>
                            <div class="countdown-item">
                                <div class="countdown-value" id="hours">00</div>
                                <div class="countdown-label">Saat</div>
                            </div>
                            <div class="countdown-item">
                                <div class="countdown-value" id="minutes">00</div>
                                <div class="countdown-label">Dakika</div>
                            </div>
                            <div class="countdown-item">
                                <div class="countdown-value" id="seconds">00</div>
                                <div class="countdown-label">Saniye</div>
                            </div>
                        </div>

                        <div class="countdown-actions">
                            <!-- Buttons removed as requested -->
                        </div>
                    </div>

                    <div class="advertisement-box">
                        <span class="ad-text">Reklam</span>
                        <span class="ad-size">728x90</span>
                    </div>
                </div>

                <!-- Alarm Setup Modal - simplified for now -->
                <div class="modal" id="alarmModal" style="display: none;">
                   {{!-- Alarm setup modal content would go here if needed --}}
                </div>
            `;

            holidayDetailContainer.innerHTML = detailTemplate;
            // Ensure the container is visible after setting its content
            if (holidayDetailContainer) holidayDetailContainer.style.display = 'block';

            // Update countdown initially and every second
            const holidayDate = new Date(holiday.year, holiday.monthIndex, holiday.day);
            updateCountdownTimer(holidayDate);
            const intervalId = setInterval(() => updateCountdownTimer(holidayDate), 1000);
            // Store interval ID to clear it later
            document.querySelector('#holiday-detail-container .countdown-timer').dataset.intervalId = intervalId;

            // Add event listener for the back button
            document.getElementById('back-to-list').addEventListener('click', () => {
                hideHolidayDetail();
            });

            // Add event listener for share button (reusing existing logic)
            document.getElementById('shareBtn').addEventListener('click', async () => {
                 const shareData = {
                    title: holiday.title,
                    text: `${holiday.title} için geri sayım: ${document.querySelector('#holiday-detail-container #days').textContent} gün kaldı!`,
                    url: window.location.href // May need adjustment if page URL changes
                };

                try {
                    await navigator.share(shareData);
                } catch (err) {
                    // Fallback for browsers that don't support Web Share API
                    const dummy = document.createElement('input');
                    document.body.appendChild(dummy);
                    dummy.value = window.location.href;
                    dummy.select();
                    document.execCommand('copy');
                    document.body.removeChild(dummy);

                    // Show toast notification (assuming toast styles exist)
                    const toast = document.createElement('div');
                    toast.className = 'toast';
                    toast.textContent = 'Link kopyalandı!';
                    document.body.appendChild(toast);
                    setTimeout(() => {
                        toast.classList.add('show');
                        setTimeout(() => {
                            toast.classList.remove('show');
                            setTimeout(() => {
                                document.body.removeChild(toast);
                            }, 300);
                        }, 2000);
                    }, 100);
                }
            });

            // Note: Alarm button functionality needs to be re-implemented or adapted.
        }

        // Function to hide holiday detail and show list
        function hideHolidayDetail() {
            holidayDetailContainer.style.display = 'none';
            document.querySelector('.holidays-list').style.display = 'flex'; // Show only the list
            // Show the holiday filters and page title again
            if (holidayFilters) holidayFilters.style.display = 'flex';
            if (pageTitle) pageTitle.style.display = 'block'; // Assuming page title uses block display

            // Clear the countdown interval when hiding the detail
            const countdownTimerElement = document.querySelector('#holiday-detail-container .countdown-timer');
            if (countdownTimerElement) {
                const intervalId = countdownTimerElement.dataset.intervalId;
                if (intervalId) clearInterval(intervalId);
            }
        }

        // Add event listeners to holiday titles to show detail
        document.querySelectorAll('.holiday-title').forEach(titleLink => {
            titleLink.addEventListener('click', function(e) {
                e.preventDefault();
                const slug = this.getAttribute('data-slug');
                const selectedHoliday = holidaysData.find(h => h.slug === slug);
                if (selectedHoliday) {
                    renderHolidayDetail(selectedHoliday);
                }
            });
        });

        // Add event listener to the dynamically added "Geri Dön" button
        holidayDetailContainer.addEventListener('click', function(e) {
            if (e.target && e.target.id === 'back-to-list') {
                // Hide the detail container
                holidayDetailContainer.style.display = 'none';
                // Show the holiday list and filters again
                if (holidaysList) holidaysList.style.display = 'flex';
                if (holidayFilters) holidayFilters.style.display = 'flex'; // Assuming filters use flex display
            }
        });

        // Initial filter application (show all by default)
        const allFilterButton = document.querySelector('.filter-btn[data-filter="all"]');
        if (allFilterButton) {
            allFilterButton.click(); // Simulate click to show all initially
        }
    }); // End of DOMContentLoaded listener
</script>

