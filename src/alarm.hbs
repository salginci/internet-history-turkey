<!-- Alarm Setup Modal -->
<div class="modal" id="alarmModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Alarm Düzenle</h2>
            <button class="close-modal">
                <i class="ri-close-line"></i>
            </button>
        </div>
        
        <div class="modal-body">
            <div class="time-picker">
                <div class="time-section">
                    <label>Saat</label>
                    <div class="time-input">
                        <button class="time-arrow prev">
                            <i class="ri-arrow-left-s-line"></i>
                        </button>
                        <input type="text" class="hour-input" value="01" readonly>
                        <button class="time-arrow next">
                            <i class="ri-arrow-right-s-line"></i>
                        </button>
                    </div>
                </div>

                <div class="time-section">
                    <label>Dakika</label>
                    <div class="time-input">
                        <button class="time-arrow prev">
                            <i class="ri-arrow-left-s-line"></i>
                        </button>
                        <input type="text" class="minute-input" value="00" readonly>
                        <button class="time-arrow next">
                            <i class="ri-arrow-right-s-line"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="sound-section">
                <label>Ses</label>
                <div class="sound-selector">
                    <select class="alarm-sound">
                        <option value="classic-bell">Klasik Çan</option>
                        <option value="electronic-beep">Elektronik Bip</option>
                    </select>
                    <button class="play-sound">
                        <i class="ri-play-line"></i>
                    </button>
                    <button class="sound-options">
                        <i class="ri-more-2-fill"></i>
                    </button>
                </div>
            </div>

            <div class="repeat-section">
                <label class="repeat-label">
                    <input type="checkbox" class="repeat-checkbox">
                    <span class="checkbox-text">Yinele</span>
                </label>
            </div>
        </div>

        <div class="modal-footer">
            <button class="test-alarm">Test Et</button>
            <div class="right-buttons">
                <button class="cancel-alarm">İptal</button>
                <button class="save-alarm">Başlat</button>
            </div>
        </div>
    </div>
</div>

<!-- Alarm Trigger Modal -->
<div class="modal alarm-trigger-modal" id="alarmTriggerModal">
    <div class="modal-content alarm-trigger-content">
        <div class="alarm-animation"></div>
